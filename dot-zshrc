export EDITOR='nvim'

# --- ALIASES ---
# nvim
alias v="nvim"
# terminal emulator
alias s="kitten ssh"
# lsd
alias l="lsd -lh"
alias lt="lsd -lh --tree"
alias la="lsd -lah"
alias lat="lsd -lah --tree"
# terraform
alias tf="terraform"

source ~/.config/zsh/git.zsh

# --- BINDINGS ---
# Unbind super-l from running 'ls'
bindkey -r "^[l"

# --- STARSHIP ---
eval "$(starship init zsh)"
