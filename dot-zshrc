export EDITOR='nvim'

# --- ALIASES ---
alias v="nvim"
alias s="kitten ssh"
alias l="lsd -lh"
alias lt="lsd -lh --tree"
alias la="lsd -lah"
alias lat="lsd -lah --tree"

source ~/.config/zsh/git.zsh

# --- BINDINGS ---
# Unbind super-l from running 'ls'
bindkey -r "^[l"

# --- STARSHIP ---
eval "$(starship init zsh)"
